                    e.preventDefault();
                    setTimeout(function () {
                        if (!this.touchIsMoving) {
                            for (var i = 0; i < this.spawnQuantity; i++) {
                                this.particles.push(new Particle(this, e.changedTouches[0].clientX, e.changedTouches[0].clientY));
